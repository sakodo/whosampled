{% extends 'base.html.twig' %}

{% block title %}Chanson
{% endblock %}

{% block body %}
	<main class="flex-column">
		<div class="row">
			<div class="col-6">
				<article class="sampleur">
					{% for song in sample.songs %}
						{% for artist in song.artists %}
							<img src="/img/{{artist.getImgArtistFile()}}" alt="" class="img-fluid" style="width: 250px; height:250px;">
						{% endfor %}
					{% endfor %}
					<a href="{{ path('app_song', {id: sample.songs[0].id}) }}" class=" text-decoration-none text-dark">
						<h3>{{sample.songs[0].songname}}</h3>
					</a>
					<a href="{{ path('app_song', {id: sample.songs[0].id}) }}" class=" text-decoration-none text-dark">
						<h4>{{sample.songs[0].artists}}</h4>
					</a>
					<p>Sample appears at
						<a href="#">0:23</a>
						and
						<a href="#">2:25</a>
						(and throughout)</p>
					<audio controls src="/audio-whosampled/{{sample.songs[0].audiosongfile}}"></audio>
				</article>
			</div>

			<div class="col-6">
				<article class="original">
					<img src="/img/{{sample.samplecoverfile}}" alt="discoverycover" class="img-fluid" style="width: 250px; height:250px;">
					
					<h3>{{ sample.samplesongorigin }}</h3>
					</a>
					<h4>{{ sample.sampleartistorigin }}</h4>
					<p>Sample appears at
						<a href="#">2:06</a>
						and
						<a href="#">2:04</a>
					</p>
					<audio controls src="/audio-whosampled/{{ sample.audiosamplefile }}"></audio>
				</article>
			</div>
		</div>
	</main>

{% endblock %}
