{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
	<!-- Début du contenu principal -->
	<main class="flex-column">
		<!-- Titre de la page -->
		<h1 class="text-6xl pt-12 pb-8 text-center" style="background-color: #f8f9fa;">S'inscrire</h1>
		<!-- Affichage des erreurs de formulaire -->
		{{ form_errors(registrationForm) }}
		<!-- Début du formulaire d'inscription -->
		{{ form_start(registrationForm) }}
		<div class='w-50 mx-auto mt-5'>
			<!-- Champ Prénom -->
			{{ form_row(registrationForm.first_name, { label: 'Prénom'}) }}
		</div>
		<div class='w-50 mx-auto'>
			<!-- Champ Nom -->
			{{ form_row(registrationForm.last_name, { label: 'Nom'}) }}
		</div>
		<div class='w-50 mx-auto'>
			<!-- Champ Email -->
			{{ form_row(registrationForm.email, { label: 'Email'}) }}
			<!-- Champ Mot de passe -->
			{{ form_row(registrationForm.password, { label: 'Mot de passe'}) }}
			<!-- Case à cocher pour accepter les conditions -->
			{{ form_row(registrationForm.agreeTerms, { label: 'Acceptez nos conditions.'}) }}
		</div>

		<div class='d-flex justify-content-center mt-5'>
			<!-- Bouton d'inscription -->
			<button type="submit" class="btn btn-primary">Inscription</button>
		</div>
		<!-- Fin du formulaire d'inscription -->
		{{ form_end(registrationForm) }}
	</main>
	<!-- Fin du contenu principal -->
{% endblock %}